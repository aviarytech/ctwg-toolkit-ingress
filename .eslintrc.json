{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:import/typescript"
        // "plugin:import/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": [
          // "./tsconfig.json",
          // "./src/web/tsconfig.json"
          "tsconfig.eslint.json"
        ]
    },
    "plugins": [
        "@typescript-eslint"
        // "import"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx",
            ".d.ts"
          ]
        }
      }
    },
    "ignorePatterns": [
      "src/web"
    //   "node_modules",
    //   "/archive",
    //   "/cdk.out"
    ],
      "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
        // "import/no-unused-modules": [2, { "unusedExports": true }]
        // "import/no-unused-modules": [1, { "missingExports": true, "unusedExports": true, "ignoreExports": ["node_modules", "cdk.out"] }]
    }
}
