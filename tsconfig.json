{
  "compilerOptions": {
    "target": "ES2018",
    "module": "NodeNext",
    // "lib": [
    //   "es2016",
    //   "es2017.object",
    //   "es2017.string"
    // ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "baseUrl": "./src"
  },
  "include": [
    "./index.ts",
    // "src/index.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    // "jest.config.ts",
  ],
}
